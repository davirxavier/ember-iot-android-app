<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/notifications_header">

        <SwitchPreferenceCompat
            app:key="notificationsEnabled"
            app:title="@string/notifications_title" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/developer_header">

        <SwitchPreferenceCompat
        app:key="developerMode"
        app:title="@string/developer_mode" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/account_header">

        <Preference app:key="logout" app:title="@string/logout" app:widgetLayout="@layout/setting_icon_item" />

    </PreferenceCategory>

</PreferenceScreen>